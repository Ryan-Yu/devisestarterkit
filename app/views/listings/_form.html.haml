= form_for @listing do |f|
  - if @listing.errors.any?
    #error_explanation
      %h2= "#{pluralize(@listing.errors.count, "error")} prohibited this listing from being saved:"
      %ul
        - @listing.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :instructions
    = f.text_area :instructions
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :start_time
    = f.time_select :start_time
  .field
    = f.label :end_time
    = f.time_select :end_time
  .field
    = f.label :requirements
    = f.text_area :requirements
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
